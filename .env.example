# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: postgresql://user:password@localhost:5432/dbname

# Redis Settings (for Celery and caching)
REDIS_URL=redis://localhost:6379/0

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=10080

# External API Keys
USER_SERVICE_API_KEY=your-user-service-api-key
PAYMENT_SERVICE_API_KEY=your-payment-service-api-key
COMMUNICATION_SERVICE_API_KEY=your-communication-service-api-key

# Webhook Settings
WEBHOOK_SECRET_KEY=your-webhook-secret-key
WEBHOOK_TIMEOUT=30

# Integration Settings
INTEGRATION_RETRY_DELAY=60
INTEGRATION_MAX_RETRIES=3
INTEGRATION_TIMEOUT=30

# Security Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
